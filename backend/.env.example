APP_NAME="Salary Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter

# Database Configuration with Optimizations
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=salary_management
DB_USERNAME=salary_user
DB_PASSWORD=password
DB_ROOT_PASSWORD=root

# Performance and Caching
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=public
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Configuration
MAX_FILE_SIZE=40960
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png"

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000
SESSION_DOMAIN=localhost
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMITING_USE_REDIS=true
LOG_RATE_LIMIT_VIOLATIONS=true
THROTTLE_REQUESTS_PER_MINUTE=60
THROTTLE_API_BURST_LIMIT=10
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_LOGIN_ATTEMPTS_HOUR=20
LOGIN_LOCKOUT_DURATION=900
THROTTLE_ADMIN_REQUESTS_PER_MINUTE=30
THROTTLE_ADMIN_GLOBAL_PER_MINUTE=100
THROTTLE_BULK_REQUESTS_PER_MINUTE=5
THROTTLE_UPLOAD_REQUESTS_PER_MINUTE=10
THROTTLE_UPLOAD_REQUESTS_PER_HOUR=50
THROTTLE_REGISTRATION_PER_MINUTE=3
THROTTLE_REGISTRATION_PER_HOUR=10

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
PERMISSIONS_POLICY_ENABLED=true

# Input Sanitization
INPUT_SANITIZATION_ENABLED=true
LOG_SUSPICIOUS_INPUT=true
MAX_TEXT_LENGTH=10000
MAX_NAME_LENGTH=255
MAX_EMAIL_LENGTH=255

# Authentication Security
SESSION_TIMEOUT=120
TOKEN_EXPIRATION=
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
TWO_FACTOR_ENABLED=false
TWO_FACTOR_REQUIRED_ADMIN=false

# File Upload Security
FILE_UPLOADS_ENABLED=true
SCAN_UPLOADS_FOR_VIRUSES=false
QUARANTINE_SUSPICIOUS_FILES=true
CHECK_FILE_MIME_TYPE=true
CHECK_FILE_EXTENSION=true
CHECK_FILE_CONTENT=true
ORGANIZE_UPLOADS_BY_DATE=true
ORGANIZE_UPLOADS_BY_USER=true
UPLOAD_DISK=public
UPLOAD_PATH=uploads

# Security Logging
LOG_SECURITY_EVENTS=true
LOG_FAILED_LOGINS=true
LOG_SUSPICIOUS_INPUT=true
LOG_ADMIN_ACTIONS=true
LOG_FILE_UPLOADS=true
SECURITY_LOG_CHANNEL=daily
AUDIT_LOG_CHANNEL=daily

# IP Filtering (Optional)
IP_FILTERING_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST=
BLOCK_TOR_EXITS=false
BLOCK_PROXIES=false
GEOLOCATION_ENABLED=false
ALLOWED_COUNTRIES=
BLOCKED_COUNTRIES=

# Database Security
LOG_DATABASE_QUERIES=false
SLOW_QUERY_THRESHOLD=1000
DB_ENCRYPT=false
DB_SSL_VERIFY=true

# API Security
API_VERSIONING_ENABLED=true
API_DEFAULT_VERSION=v1
API_SUPPORTED_VERSIONS=v1
CORS_ENABLED=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_SUPPORTS_CREDENTIALS=true
API_DOCS_ENABLED=true
API_DOCS_REQUIRE_AUTH=false

# Admin Configuration
ADMIN_EMAILS="admin@example.com,superadmin@example.com"

# Currency Configuration
DEFAULT_CURRENCY=EUR
CURRENCY_API_KEY=
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}/api"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
