APP_NAME="Salary Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Logging Configuration - Production Optimized
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter
LOG_MAX_FILES=30
LOG_DAILY_DAYS=30

# Database Configuration with Production Optimizations
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=salary_management_prod
DB_USERNAME=salary_user_prod
DB_PASSWORD=
DB_ROOT_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_STRICT=true
DB_ENGINE=InnoDB

# Performance and Caching - Production Settings
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
CACHE_PREFIX=salary_prod
FILESYSTEM_DISK=public
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Redis Configuration - Production Optimized
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3
REDIS_PREFIX=salary_prod:

# Mail Configuration - Production
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_REPLY_TO_ADDRESS="support@your-domain.com"
MAIL_REPLY_TO_NAME="${APP_NAME} Support"

# File Upload Configuration - Production Security
MAX_FILE_SIZE=40960
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png"
FILE_UPLOADS_ENABLED=true
SCAN_UPLOADS_FOR_VIRUSES=true
QUARANTINE_SUSPICIOUS_FILES=true
CHECK_FILE_MIME_TYPE=true
CHECK_FILE_EXTENSION=true
CHECK_FILE_CONTENT=true
ORGANIZE_UPLOADS_BY_DATE=true
ORGANIZE_UPLOADS_BY_USER=true
UPLOAD_DISK=public
UPLOAD_PATH=uploads

# Security Configuration - Production Hardened
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIE=true
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_SUPPORTS_CREDENTIALS=true

# Rate Limiting - Production Settings
RATE_LIMITING_ENABLED=true
RATE_LIMITING_USE_REDIS=true
LOG_RATE_LIMIT_VIOLATIONS=true
THROTTLE_REQUESTS_PER_MINUTE=100
THROTTLE_API_BURST_LIMIT=20
THROTTLE_LOGIN_ATTEMPTS=3
THROTTLE_LOGIN_ATTEMPTS_HOUR=10
LOGIN_LOCKOUT_DURATION=1800
THROTTLE_ADMIN_REQUESTS_PER_MINUTE=50
THROTTLE_ADMIN_GLOBAL_PER_MINUTE=200
THROTTLE_BULK_REQUESTS_PER_MINUTE=10
THROTTLE_UPLOAD_REQUESTS_PER_MINUTE=20
THROTTLE_UPLOAD_REQUESTS_PER_HOUR=100
THROTTLE_REGISTRATION_PER_MINUTE=2
THROTTLE_REGISTRATION_PER_HOUR=5

# Security Headers Configuration - Production
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=/api/csp-report
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
PERMISSIONS_POLICY_ENABLED=true

# Input Sanitization - Production
INPUT_SANITIZATION_ENABLED=true
LOG_SUSPICIOUS_INPUT=true
MAX_TEXT_LENGTH=10000
MAX_NAME_LENGTH=255
MAX_EMAIL_LENGTH=255

# Authentication Security - Production
SESSION_TIMEOUT=60
TOKEN_EXPIRATION=3600
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
TWO_FACTOR_ENABLED=false
TWO_FACTOR_REQUIRED_ADMIN=true

# Security Logging - Production
LOG_SECURITY_EVENTS=true
LOG_FAILED_LOGINS=true
LOG_SUSPICIOUS_INPUT=true
LOG_ADMIN_ACTIONS=true
LOG_FILE_UPLOADS=true
SECURITY_LOG_CHANNEL=daily
AUDIT_LOG_CHANNEL=daily

# IP Filtering - Production (Configure as needed)
IP_FILTERING_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST=
BLOCK_TOR_EXITS=true
BLOCK_PROXIES=true
GEOLOCATION_ENABLED=false
ALLOWED_COUNTRIES=
BLOCKED_COUNTRIES=

# Database Security - Production
LOG_DATABASE_QUERIES=false
SLOW_QUERY_THRESHOLD=2000
DB_ENCRYPT=false
DB_SSL_VERIFY=true

# API Security - Production
API_VERSIONING_ENABLED=true
API_DEFAULT_VERSION=v1
API_SUPPORTED_VERSIONS=v1
API_DOCS_ENABLED=false
API_DOCS_REQUIRE_AUTH=true

# Admin Configuration - Production
ADMIN_EMAILS="admin@your-domain.com"

# Currency Configuration
DEFAULT_CURRENCY=EUR
CURRENCY_API_KEY=
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/

# AWS Configuration - Production (Configure if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Monitoring and Alerting
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DISK=s3

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}/api"